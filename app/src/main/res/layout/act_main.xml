<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:refreshlinearly="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsnv.pulltorefreshlinearlayout.ActMain"
    >

    <com.nsnv.mlib.RefreshLinearly
        android:id="@+id/refresh_linely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        refreshlinearly:colorShow="@color/colorShow"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.nsnv.mlib.RefreshLinearly>

</RelativeLayout>
