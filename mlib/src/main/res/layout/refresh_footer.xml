<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/refresh_header_footer_size"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >


    <com.nsnv.mlib.widget.MProgressCircle
        android:id="@+id/progress_footer"
        android:layout_width="@dimen/refresh_header_footer_progresscircle"
        android:layout_height="@dimen/refresh_header_footer_progresscircle"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txt_footer_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh_footer_pullup"
        android:textSize="@dimen/txt_size_normal"
        android:layout_gravity="center"
        />

</FrameLayout>